@model Article.Models.Cart

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="product-detail" class="container pb-5">

    <div class="row">
        <div class="col-md-12">

            <h2>Sepet</h2>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> Resim   </th>
                        <th> Ürün adı   </th>
                        <th> Price   </th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var x in Model.CartLines)
                    {
                        <tr>
                            <td> <img  src="https://www.projesoft.com.tr/wp-content/uploads/2018/08/eticaret-sepet.png" width="50"/>  </td>
                            <td> @x.Product.Name    </td>
                            <td> @x.Product.UnitPrice    </td>
                        </tr>

                    }

                </tbody>
                <tfoot>
                    <td colspan="2">Fiyat</td>
                    <td>@Model.Total().ToString("c")</td>
                </tfoot>
            </table>
        </div>

    </div>
</div>