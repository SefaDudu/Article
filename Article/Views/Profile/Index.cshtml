                                        </a>

                                    </div>

                                </div>



                            </div>

                        </div>
                    </div>


                </div>
            </div>
            <!--end::Navbar-->
            <!--begin::Toolbar-->
            <div class="d-flex flex-wrap flex-stack mb-6">
                <!--begin::Title-->
                <h3 class="fw-bolder my-2">
                    Adres Bilgilerim

                </h3>


            </div>
          
            <div class="row g-6 g-xl-9">
                @foreach (var x in Model.Address)
                {
            <div class="col-sm-6 col-xl-4" style="box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;">

                <div class="card h-100">

                    <div class="card-header flex-nowrap border-0 pt-9">



                    </div>

                    <div class="card-body d-flex flex-column px-9 pt-6 pb-8">

                        <div class="fs-2tx fw-bolder mb-3">@x.Name</div>

                        <div class="d-flex align-items-center flex-wrap mb-5 mt-auto fs-6">

                            <div class="fw-bolder text-primary me-2">@x.Description </div>


                        </div>

                        <div class="d-flex align-items-center fw-bold">

                            <a class="btn btn-secondary" onclick="Sil(@x.Id)" id="sil">Sil</a>
                        </div>

                    </div>

                </div>

            </div>

                }
                        </div>
                    </div>
        <!--end::Container-->
    </div>






    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="/* display: block; *//* margin: 0 auto; */margin-top: 280px;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Yeni Adres Ekle</h5>

                </div>
                <div class="modal-body">
                    <form asp-action="AddAddress" asp-controller="Profile" method="post">
                        <div class="form-group">
                            <label for="exampleInputAdress">Adresi Giriniz</label>
                            <input type="text" name="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adres Giriniz">
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleFormControlTextarea1">Adres Detayını Giriniz</label>
                            <textarea class="form-control" name="Description" id="exampleFormControlTextarea1" rows="3" placeholder="Adres Detayı Giriniz"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary " style="display: block;margin: 0 auto;margin-top: 14px;">Ekle</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        $("#modal").click(function () {
            $("#exampleModal").modal("show");
        });
    </script>
